<UserControl x:Class="Kazyx.WPMMM.Controls.FramingGrids"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="320" d:DesignWidth="480">

    <Grid x:Name="LayoutRoot" Background="Transparent" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <Grid Name="Lines" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" SizeChanged="Lines_SizeChanged">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button Grid.Row="0" Grid.Column="0" Content="Button" HorizontalAlignment="Left" Margin="32,40,0,0" VerticalAlignment="Top" Height="235" Width="416"/>
            <Line Name="test" X1="10" X2="200" Y1="10" Y2="200" Stroke="Blue" StrokeThickness="5"/>
        </Grid>
    </Grid>
</UserControl>