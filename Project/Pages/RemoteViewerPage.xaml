<phone:PhoneApplicationPage
    x:Class="Kazyx.WPPMM.Pages.RemoteViewerPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:phone="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone"
    xmlns:shell="clr-namespace:Microsoft.Phone.Shell;assembly=Microsoft.Phone"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:playback="clr-namespace:Kazyx.WPPMM.PlaybackMode"
    xmlns:wppmmcontrol="clr-namespace:Kazyx.WPPMM.Controls"
    xmlns:toolkit="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone.Controls.Toolkit"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    SupportedOrientations="PortraitOrLandscape" Orientation="Portrait"
    OrientationChanged="PhoneApplicationPage_OrientationChanged"
    mc:Ignorable="d"
    shell:SystemTray.IsVisible="True" BackKeyPress="PhoneApplicationPage_BackKeyPress">

    <phone:PhoneApplicationPage.Resources>
        <playback:ThumbnailImageConverter x:Key="ThumbnailConverter" />

        <DataTemplate x:Key="ItemTemplate">
            <Grid Height="108" Width="108" Margin="6,6">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="48"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="48"/>
                </Grid.RowDefinitions>
                <Grid.Background>
                    <SolidColorBrush Color="{StaticResource PhoneChromeColor}"/>
                </Grid.Background>
                <Image Grid.ColumnSpan="2" Grid.RowSpan="2" x:Name="ThumbnailImage" Width="108" Height="108" Stretch="Uniform" Tap="RemoteThumbnail_Tap" >
                    <Image.Source>
                        <Binding Path="CachePath" Mode="OneWay" Converter="{StaticResource ThumbnailConverter}"/>
                    </Image.Source>
                </Image>
                <Image Grid.Row="1" Grid.Column="1" Source="/Assets/Screen/mode_movie.png" Visibility="{Binding MovieIconVisibility, Mode=OneTime}" IsHitTestVisible="False" CacheMode="BitmapCache" Margin="0,0,20,20"/>
                <toolkit:ContextMenuService.ContextMenu>
                    <toolkit:ContextMenu IsZoomEnabled="True">
                        <toolkit:MenuItem x:Name="Playback" Header="Playback" Click="Playback_Click" />
                        <toolkit:MenuItem x:Name="CopyToPhone" Header="Copy to phone storage" Click="CopyToPhone_Click" Visibility="{Binding CopyToPhoneVisibility}"/>
                        <toolkit:MenuItem x:Name="Delete" Header="Delete" Click="Delete_Click" />
                    </toolkit:ContextMenu>
                </toolkit:ContextMenuService.ContextMenu>
            </Grid>
        </DataTemplate>

        <DataTemplate x:Key="LocalItemTemplate">
            <StackPanel Height="108" Width="108" Margin="6,6">
                <Image x:Name="ThumbnailImage" Width="108" Height="108"
                       Stretch="UniformToFill"
                       Source="{Binding RowImage, Mode=OneWay}" Tap="ThumbnailImage_Tap" />
            </StackPanel>
        </DataTemplate>

        <DataTemplate x:Key="HeaderTemplate">
            <TextBlock Text="{Binding Path=Key}" Style="{StaticResource PhoneTextGroupHeaderStyle}"/>
        </DataTemplate>

        <phone:JumpListItemBackgroundConverter x:Key="BackgroundConverter"/>
        <phone:JumpListItemForegroundConverter x:Key="ForegroundConverter"/>
        <Style x:Key="DateGroupJumpListStyle" TargetType="phone:LongListSelector">
            <Setter Property="LayoutMode" Value="List"/>
            <Setter Property="ItemTemplate" >
                <Setter.Value>
                    <DataTemplate>
                        <Border Background="{Binding Converter={StaticResource BackgroundConverter}}" Margin="20,6" >
                            <TextBlock Text="{Binding Key}" FontFamily="{StaticResource PhoneFontFamilySemiBold}"  Style="{StaticResource PhoneTextGroupHeaderStyle}" Padding="20,0" 
               Foreground="{Binding Converter={StaticResource ForegroundConverter}}" VerticalAlignment="Bottom"/>
                        </Border>
                    </DataTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Storyboard x:Name="ShowTitleBlockAnimation">
            <DoubleAnimation Duration="0:0:0.5" From="0.0" To="0.9" Storyboard.TargetProperty="Opacity" Storyboard.TargetName="TitleBlock" />
        </Storyboard>
        <Storyboard x:Name="HideTitleBlockAnimation">
            <DoubleAnimation Duration="0:0:0.5" From="109" To="0" Storyboard.TargetProperty="Height" Storyboard.TargetName="TitleBlock" />
        </Storyboard>
    </phone:PhoneApplicationPage.Resources>

    <Grid x:Name="LayoutRoot" Background="Transparent">
        <Grid.Resources>
            <Storyboard x:Name="ToastApparance" Completed="ToastApparance_Completed">
                <DoubleAnimation Storyboard.TargetName="Toast"
                                             Storyboard.TargetProperty="Opacity" From="0.0" To="1.0" 
                                             Duration="0:0:0.2" AutoReverse="False" />
            </Storyboard>
            <Storyboard x:Name="ToastDisApparance">
                <DoubleAnimation Storyboard.TargetName="Toast"
                                             Storyboard.TargetProperty="Opacity" From="1.0" To="0.0" 
                                             Duration="0:0:0.2" AutoReverse="False" />
            </Storyboard>
        </Grid.Resources>

        <phone:Pivot x:Name="PivotRoot" SelectionChanged="Pivot_SelectionChanged">
            <phone:Pivot.Title>
                <TextBlock x:Name="TitleHeader" Text="{Binding Path=LocalizedResources.ApplicationTitle, Source={StaticResource LocalizedStrings}}" />
            </phone:Pivot.Title>

            <phone:PivotItem Margin="0,14,0,0">
                <phone:PivotItem.Header>
                    <TextBlock Text="Phone storage" Margin="0,8,0,0" Style="{StaticResource PhoneTextTitle2Style}" FontWeight="Bold"/>
                </phone:PivotItem.Header>
                <phone:LongListSelector
                Name="LocalImageGrid"
                Margin="0"
                IsGroupingEnabled="False"
                LayoutMode="Grid"
                GridCellSize="112,112"
                ItemsSource="{Binding Group, Mode=OneWay}"
                ItemTemplate="{StaticResource LocalItemTemplate}" >
                </phone:LongListSelector>
            </phone:PivotItem>

            <phone:PivotItem x:Name="RemotePivot" Margin="0,14,0,0">
                <phone:PivotItem.Header>
                    <TextBlock x:Name="TitleBlock" Text="Camera storage" Margin="0,8,0,0" Style="{StaticResource PhoneTextTitle2Style}" FontWeight="Bold"/>
                </phone:PivotItem.Header>
                <Grid>
                    <TextBlock x:Name="UnsupportedMessage" Text="Access to the camera storage seems to be allowed only on the latest models..." TextWrapping="Wrap" VerticalAlignment="Center" Margin="36,0" Style="{StaticResource PhoneTextTitle3Style}"/>
                    <toolkit:LongListMultiSelector
                        Name="RemoteImageGrid"
                        Margin="0"
                        IsGroupingEnabled="True"
                        GroupHeaderTemplate="{StaticResource HeaderTemplate}"
                        LayoutMode="Grid"
                        GridCellSize="112,112"
                        ItemTemplate="{StaticResource ItemTemplate}"
                        JumpListStyle="{StaticResource DateGroupJumpListStyle}"
                        Loaded="ImageGrid_Loaded"
                        Unloaded="ImageGrid_Unloaded" SelectionChanged="ImageGrid_SelectionChanged" ItemRealized="ImageGrid_ItemRealized" IsSelectionEnabledChanged="RemoteImageGrid_IsSelectionEnabledChanged" >
                    </toolkit:LongListMultiSelector>
                </Grid>
            </phone:PivotItem>
        </phone:Pivot>

        <Border x:Name="TouchBlocker" Margin="0" Grid.RowSpan="2" Visibility="Collapsed">
            <Border.Background>
                <SolidColorBrush Color="{StaticResource PhoneSemitransparentColor}"/>
            </Border.Background>
        </Border>
        <ViewportControl x:Name="viewport" Grid.RowSpan="2" Margin="10" ManipulationStarted="viewport_ManipulationStarted" ManipulationDelta="viewport_ManipulationDelta" ManipulationCompleted="viewport_ManipulationCompleted" ViewportChanged="viewport_ViewportChanged">
            <Canvas x:Name="canvas" >
                <Image x:Name="DetailImage" CacheMode="BitmapCache" RenderTransformOrigin="0,0" >
                    <Image.RenderTransform>
                        <ScaleTransform x:Name="xform" />
                    </Image.RenderTransform>
                </Image>
            </Canvas>
        </ViewportControl>
        <Border x:Name="MovieDrawer" HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="Collapsed">
            <Border.Background>
                <SolidColorBrush Color="{StaticResource PhoneSemitransparentColor}"/>
            </Border.Background>
            <wppmmcontrol:MoviePlaybackScreen Name="MoviePlaybackScreen" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="12" 
                                              CurrentPosition="{Binding CurrentPosition}" Duration="{Binding Duration}"/>
        </Border>
        <Grid Name="Toast" Opacity="0.0" Visibility="Visible" Height="auto" 
                          HorizontalAlignment="Stretch" VerticalAlignment="Top"
                          Margin="-15,0" Background="{StaticResource PhoneAccentBrush}">
            <TextBlock HorizontalAlignment="Center" Grid.Row="0" 
                                   TextWrapping="Wrap" Padding="5,5" Height="auto"
                                 Text="{Binding LocalizedResources.Message_ImageDL_Succeed, Source={StaticResource LocalizedStrings}}"
                                 Foreground="{StaticResource PhoneForegroundBrush}" 
                                   VerticalAlignment="Center" Name="ToastMessage"/>
        </Grid>

    </Grid>

    <shell:SystemTray.ProgressIndicator>
        <shell:ProgressIndicator x:Name="progress" IsIndeterminate="True" IsVisible="False" />
    </shell:SystemTray.ProgressIndicator>
</phone:PhoneApplicationPage>